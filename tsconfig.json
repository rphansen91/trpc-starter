{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "composite": true
  },
  "files": [
    "./package.json"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
}
